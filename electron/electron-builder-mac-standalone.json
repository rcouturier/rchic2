{
  "appId": "fr.univ-fcomte.rchic.standalone",
  "productName": "RCHIC-Standalone",
  "forceCodeSigning": false,
  "directories": {
    "output": "dist-standalone-mac",
    "buildResources": "assets"
  },
  "files": [
    "src/**/*",
    "assets/**/*"
  ],
  "extraResources": [
    {
      "from": "../inst/web",
      "to": "web"
    },
    {
      "from": "../inst/plumber",
      "to": "plumber"
    },
    {
      "from": "binaries",
      "to": "binaries"
    },
    {
      "from": "R-portable-mac",
      "to": "R-portable",
      "filter": ["**/*"]
    }
  ],
  "asarUnpack": [
    "**/*.R",
    "**/*.so",
    "**/*.dylib"
  ],
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "assets/icon.icns",
    "category": "public.app-category.education",
    "artifactName": "RCHIC-Standalone-${version}-mac.${ext}",
    "hardenedRuntime": false,
    "gatekeeperAssess": false
  },
  "dmg": {
    "artifactName": "RCHIC-Standalone-${version}.dmg"
  }
}
