{
  "appId": "fr.univ-fcomte.rchic.standalone",
  "productName": "RCHIC-Standalone",
  "forceCodeSigning": false,
  "directories": {
    "output": "dist-standalone-linux",
    "buildResources": "assets"
  },
  "files": [
    "src/**/*",
    "assets/**/*"
  ],
  "extraResources": [
    {
      "from": "../inst/web",
      "to": "web"
    },
    {
      "from": "../inst/plumber",
      "to": "plumber"
    },
    {
      "from": "binaries",
      "to": "binaries"
    },
    {
      "from": "R-portable-linux",
      "to": "R-portable",
      "filter": ["**/*"]
    }
  ],
  "asarUnpack": [
    "**/*.R",
    "**/*.so"
  ],
  "linux": {
    "target": ["AppImage", "tar.gz"],
    "icon": "assets/icon.png",
    "category": "Education",
    "artifactName": "RCHIC-Standalone-${version}-linux.${ext}"
  }
}
